<assembly>
	<id>formation-formateur</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
			<fileMode>0770</fileMode>
			<directoryMode>0770</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/env/private/formation-formateur</directory>
			<outputDirectory>conf</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
			<fileMode>0770</fileMode>
			<directoryMode>0770</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/tests</directory>
			<outputDirectory>tests</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
			<fileMode>0700</fileMode>
			<directoryMode>0770</directoryMode>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/target/${artifactId}-${version}.jar</source>
			<outputDirectory>lib</outputDirectory>			
			<fileMode>777</fileMode>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>${groupId}:${artifactId}:jar</exclude>
			</excludes>
			<fileMode>777</fileMode>
			<directoryMode>777</directoryMode>
		</dependencySet>
	</dependencySets>

</assembly>